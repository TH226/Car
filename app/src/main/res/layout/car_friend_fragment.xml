<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#eeecec"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_fri_return_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/cxz_common_navi_button_back" />


        <TextView
            android:id="@+id/car_fri_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_fri_return_home"
            android:text="附近"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/start_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:text="开始会话"
            android:textColor="@color/colorbottomlight"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/add_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:text="添加好友"
            android:textColor="@color/colorbottomlight"
            android:textSize="16sp"
            android:visibility="gone"
            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/car_frag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        ></FrameLayout>

    <include layout="@layout/car_friend_bottom"></include>
</LinearLayout>