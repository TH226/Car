<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeecec"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_addcar_return_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/cxz_common_navi_button_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_addcar_return_home"
            android:text="添加车辆"
            android:textSize="16sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#acabab"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="车  牌  号*"
                android:textColor="#000" />

            <View
                android:layout_width="1sp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="#acabab"></View>

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@drawable/edit_addcar_kuang"
                android:hint="请输入车牌号(必填)"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="车辆别名"
                android:textColor="#000" />
            <View
                android:layout_width="1sp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="#acabab"></View>

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@drawable/edit_addcar_kuang"
                android:hint="请输入车辆别名(选填)"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="车款信息*"
                android:textColor="#000" />

            <View
                android:layout_width="1sp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="#acabab"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@drawable/edit_addcar_kuang"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="请选择车款信息(必填)"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="排    量*"
                android:textColor="#000" />
            <View
                android:layout_width="1sp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="#acabab"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@drawable/edit_addcar_kuang"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="请选择排量(必填)"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="变  速  箱*"
                android:textColor="#000" />

            <View
                android:layout_width="1sp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="#acabab"></View>
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@drawable/edit_addcar_kuang"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="请选择变速箱类型(必填)"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="燃油类型*"
                android:textColor="#000" />

            <View
                android:layout_width="1sp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="#acabab"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@drawable/edit_addcar_kuang"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="请输入车牌号(必填)"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="车  架  号"
                android:textColor="#000" />

            <View
                android:layout_width="1sp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="#acabab"></View>

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@drawable/edit_addcar_kuang"
                android:hint="请输入车架号(选填)"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="上牌时间"
                android:textColor="#000" />

            <View
                android:layout_width="1sp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="#acabab"></View>
            <TextView
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:background="@drawable/edit_addcar_kuang"
                android:hint="请选择上牌时间"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorbottomlight"
            android:text="确定" />


    </LinearLayout>


</LinearLayout>