<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:id="@+id/rl_user_infomation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/tv_user_infomation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_centerInParent="true"
            android:textColor="@color/colorbottomlight"
            />
        <TextView
            android:id="@+id/tv_user_infomation_line"
            android:layout_width="match_parent"
            android:layout_height="8px"
            android:background="@color/colorbottomlight"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_car_infomation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/tv_car_infomation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆信息"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_car_infomation_line"
            android:layout_width="match_parent"
            android:layout_height="8px"
            android:background="@color/colorbottomgray"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>