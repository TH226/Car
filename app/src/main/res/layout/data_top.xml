<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_day_data"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/tv_day_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日数据"
            android:textColor="@color/colorbottomlight"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/iv_day_data"
            android:layout_width="match_parent"
            android:layout_height="8px"
            android:background="@color/colorbottomlight"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_week_data"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/tv_week_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周数据"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/iv_week_data"
            android:layout_width="match_parent"
            android:layout_height="8px"
            android:background="@color/colorbottomgray"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_month_data"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/tv_month_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月数据"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/iv_month_data"
            android:layout_width="match_parent"
            android:layout_height="8px"
            android:background="@color/colorbottomgray"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>